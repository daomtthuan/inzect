{
  "$schema": "https://swc.rs/schema.json",
  "isModule": true,
  "module": {
    "type": "nodenext",
    "resolveFully": true
  },
  "env": {
    "coreJs": "3.42.0"
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorVersion": "2022-03",
      "useDefineForClassFields": true
    },
    "externalHelpers": true,
    "keepClassNames": true,
    "preserveAllComments": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "experimental": {
      "emitIsolatedDts": true
    }
  },
  "sourceMaps": true,
  "inlineSourcesContent": false,
  "minify": true
}
